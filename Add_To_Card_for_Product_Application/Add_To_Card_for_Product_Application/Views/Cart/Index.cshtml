
@{
    ViewBag.Title = "Index";
}

<h2>Cart Index</h2>

@using Add_To_Card_for_Product_Application.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>

    <h3>Cart Page</h3>
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Cost</th>
            <th>Option</th>
        </tr>
        @foreach (Item item in (List<Item>)Session["cart"])
        {
        <tr>
            <td>@item.Product.Id</td>
            <td>@item.Product.Name</td>
            <td><img src="~/Content/Images/@item.Product.Photo" width="60" /> </td>
            <td>@item.Product.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Product.Price * item.Quantity)</td>
            <td><a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })" class="btn btn-success">Remove</a></td>
        </tr>
        }
        <tr>
            <td align="right" colspan="5">Total Amount = </td>
            <td>
                @{
                    List<Item> cart = (List<Item>)Session["cart"];
                    var total = cart.Sum(item => item.Product.Price * item.Quantity);
                }
                @total
            </td>
        </tr>
    </table>
    <br>
    <a href="@Url.Action("Index", "Product")" class="btn btn-success">Buy More Products</a>
    <a href="@Url.Action("Index", "Product")" class="btn btn-success">Confirm</a>
    <a href="@Url.Action("Index", "Product")" class="btn btn-success">Back</a>

</body>
</html>

