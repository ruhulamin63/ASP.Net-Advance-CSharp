@model IEnumerable<ecomm.Models.EF.order>

@{
    ViewBag.Title = "MyOrders";
}

<h2>MyOrders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
