@model Ghor_Sheba.Models.Booking

@{
    ViewBag.Title = "ManageService";
    Layout = "~/Views/ServiceProvider/IndexLayout.cshtml";
}

<title>Edit Service</title>
<div id="page-wrapper">
    <h2>Update Service</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="form-control" id="status" name="status">
                        <option>Select Work Status</option>
                        <option>Confirm</option>
                        <option>Completed</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.payment_status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="form-control" id="payment_status" name="payment_status">
                        <option>Select Payment Status</option>
                        <option>Pending</option>
                        <option>Paid</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.payment_status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>