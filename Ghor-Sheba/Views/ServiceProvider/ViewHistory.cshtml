@model IEnumerable<Ghor_Sheba.Models.Booking>

@{
    ViewBag.Title = "ViewHistory";
    Layout = "~/Views/ServiceProvider/IndexLayout.cshtml";
}

<title>View History</title>
<div id="page-wrapper">
    <h2>ViewHistory</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customer_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.payment_status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.customer_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.payment_status)
                </td>
            </tr>
        }

    </table>
</div>