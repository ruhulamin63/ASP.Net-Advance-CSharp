@model Ghor_Sheba.Models.LoginUser

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Manager/IndexLayout.cshtml";
}


<div id="page-wrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Edit Profile</h2>
            <hr />
