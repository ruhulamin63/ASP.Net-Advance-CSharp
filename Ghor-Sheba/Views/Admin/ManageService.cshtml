@model IEnumerable<Ghor_Sheba.Models.Service>

@{
    ViewBag.Title = "ManageService";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}
<title>Manage Services</title>
<div id="page-wrapper">
    <h2>Manage Service</h2>

    <p>
        <a href="/Admin/AddService" class="btn btn-success">Create New</a>
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.cost)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cost)
        </td>
        <td><a href="/Admin/EditService/@item.id" class="btn btn-success">Edit</a></td>
        <td><a href="/Admin/DeleteService/@item.id" class="btn btn-danger">Delete</a></td>
    </tr>
        }

    </table>
</div>