@model IEnumerable<Ghor_Sheba.Models.Complaint>

@{
    ViewBag.Title = "ManageComplain";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<title>Manage Complain</title>
<div id="page-wrapper">
    <h2>Manage Complain</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customer_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.customer_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                <td><a href="/Admin/EditComplain/@item.id" class="btn btn-success">Edit</a></td>
                </td>
            </tr>
        }

    </table>
</div>