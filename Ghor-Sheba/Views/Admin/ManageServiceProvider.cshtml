@model IEnumerable<Ghor_Sheba.Models.LoginUser>
@{
    ViewBag.Title = "Manage Service Provider";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<title>Manage Service Provider</title>
<div id="page-wrapper">
    <p>
        <a href="/Admin/AddServiceProvider" class="btn btn-success">Create New</a>
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.user_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td><a href="/Admin/EditServiceProvider/@item.id" class="btn btn-success">Edit</a></td>
        <td><a href="/Admin/DeleteServiceProvider/@item.id" class="btn btn-danger">Delete</a></td>
    </tr>
        }

    </table>
</div>