@model IEnumerable<Ghor_Sheba.Models.Booking>

@{
    ViewBag.Title = "ManageBookedService";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<title>Manage Booked Services</title>
<div id="page-wrapper">
    <h2>Manage Booked Services</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customer_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.payment_status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.customer_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.payment_status)
                </td>

                <td><a href="/Admin/EditBookedService/@item.id" class="btn btn-success">Edit</a></td>
                <td><a href="/Admin/ConfirmBookedService/@item.id" class="btn btn-success">Confirm</a></td>
                <td><a href="/Admin/DeleteBookedService/@item.id" class="btn btn-danger">Delete</a></td>
            </tr>
        }

    </table>
</div>