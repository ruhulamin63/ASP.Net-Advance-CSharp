@model IEnumerable<Ghor_Sheba.Models.Booking>

@{
    ViewBag.Title = "PaymentStatus";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}
<title>Payment Status</title>
<div id="page-wrapper">
    <h2>Payment Status</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customer_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.payment_status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.customer_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.payment_status)
                </td>
                <td><a href="/Admin/PaymentUpdate/@item.id" class="btn btn-success">Update</a></td>
            </tr>
        }

    </table>
</div>