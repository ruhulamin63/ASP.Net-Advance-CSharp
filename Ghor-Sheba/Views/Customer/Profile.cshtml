
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Customer/ProfileLayout.cshtml";
}

<h1>Profile</h1>
<a href="/Customer/Index"><h2 style="color:white">Go Back to Dashboard</h2></a>
<div class="containerw3layouts-agileits">

    <div class="w3imageaits">
        <img class="user" src="~/CustomerTemplate/Profile/images/user.png" alt="Custom Signup Form">
        <h2>Let's get you set up</h2>
        <p>It should only take you a minute to connect</p>
    </div>

    <div class="aitsloginwthree w3layouts agileits">
        <form action="/Customer/Profile" method="post">
            <input type="text" Name="username" placeholder="Username" required="" value="@ViewData["username"]">
            <input type="password" Name="Password" placeholder="Password" required="" value="@ViewData["password"]">
            <input class="fill tel" name="phone" placeholder="Phone" required="" value="@ViewData["phone"]">
            <input class="fill tel" name="address" placeholder="Address" required="" value="@ViewData["address"]">
            <div class="send-button wthree agileits">
                <input type="submit" value="Save">
            </div>
        </form>
    </div>

    <div class="clear"></div>

</div>

<div class="w3lsfooteragileits">
    <p> &copy; 2017 Custom Signup Form. All Rights Reserved | Design by <a href="http://w3layouts.com" target="=_blank">W3layouts</a></p>
</div>



