@model List<Product_MS.Models.Entities.Product>
@{
    ViewBag.Title = "Cart_Index";
}

<h2>Cart List</h2>
<a class="btn btn-primary" href="/product/create">Add Product</a>
<hr>
<h3>All Products</h3>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Descreption</th>
        <th colspan="2" align="center">Action</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Qty</td>
            <td>@p.Price</td>
            <td>@p.Description</td>
            <td><a href="/product/remove/@p.Id" class="btn btn-danger">Remove</a></td>
        </tr>
      }
</table>


@if (Model.Count() > 0)
{
    <a class="btn btn-primary" href="/order/place/@Model">Confirm</a>
}




