@model List<Product_MS.Models.Entities.Product>
@{
    ViewBag.Title = "Order";
}

<h2>Product Orders</h2>

<a class="btn btn-primary" href="/product/order">Add To Cart Procuct</a>
<hr>

<h3>All Products</h3>

    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Descreption</th>
            <th>Action</th>
        </tr>
        @foreach (var s in Model)
        {
    <tr>
        <td>@s.Id</td>
        <td>@s.Name</td>
        <td>@s.Qty</td>
        <td>@s.Price</td>
        <td>@s.Description</td>
        <td><a href="/product/cart/@s.Id" class="btn btn-success">Add to Cart</a></td>
    </tr>
        }
    </table>



