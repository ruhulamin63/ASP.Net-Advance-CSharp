@model Product_MS.Models.Entities.Product

<h2>Update</h2>
<form action="/Product/Update" method="post">

    Name: <input type="text" class="form-control" value="@Model.Name" name="Name" />

    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    <br>Qty: <input type="text" class="form-control" value="@Model.Qty" name="qty" />
    @Html.ValidationMessageFor(m => m.Qty, "", new { @class = "text-danger" })

    <br>Price: <input type="text" class="form-control" value="@Model.Price" name="price" />
    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })

    <br>Descreption: <input type="text" class="form-control" value="@Model.Desc" name="desc" />
    @Html.ValidationMessageFor(m => m.Desc, "", new { @class = "text-danger" })

    <br />
    <input type="submit" value="Update" class="btn btn-success">
    <a href="/product/list"  class="btn btn-success">Back</a>

</form>
