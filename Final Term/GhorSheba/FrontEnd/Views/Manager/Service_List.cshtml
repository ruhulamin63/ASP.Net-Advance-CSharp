@model IEnumerable<BEL.ServiceModel>

@{
    ViewBag.Title = "Service_List";
    Layout = "~/Views/Manager/IndexLayout.cshtml";
}

<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
    <!--begin::Container-->
    <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div class="d-flex align-items-center me-3">
            <!--begin::Title-->
            <h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-3">
                Service Edit
                <!--begin::Separator-->
                <span class="h-20px border-gray-200 border-start ms-3 mx-2"></span>
                <!--end::Separator-->
                <!--begin::Description-->
                <small class="text-muted fs-7 fw-bold my-1 ms-1">Update Service</small>
                <!--end::Description-->
            </h1>
            <!--end::Title-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Post-->
<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container">

        <!--begin::Row-->
        <div class="row gy-5 gx-xl-8">
            <!--begin::Col-->
            <div class="col-xl-12">
                <!--begin::Tables Widget 9-->
                <div class="card card-xxl-stretch mb-5 mb-xl-8">
                    <!--begin::Header-->
                    <div class="card-header border-0 pt-5">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label fw-bolder fs-3 mb-1">Service Data Information</span>
                            <span class="text-muted mt-1 fw-bold fs-7">All Update Service Data</span>
                        </h3>
                    </div>
                    <!--end::Header-->
                    <hr />
                    <!--begin::Body-->
                    <div class="card-body py-3">
                        <!--begin::Table container-->
                        <div class="card-body">
                            <div class="table-responsive">
                                <!--begin::Table head-->
                                <p>
                                    <a href="@Url.Action("Service_Create", "Manager")" class="btn btn-success btn-sm"><i class="fa fa-plus"></i>Create New</a>
                                </p>
                                <hr />
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr style="background-color: #E74C3C; color:white !important">
                                            <th style="text-align: center; width:8%;">Name</th>
                                            <th style="text-align: center;" class="min-w-100px">Category</th>
                                            <th style="text-align: center;" class="min-w-100px">Unit Price</th>
                                            <th style="text-align: center;" class="min-w-100px">Discount</th>
                                            <th style="text-align: center;" class="min-w-100px">Description</th>
                                            <th style="text-align: center;" class="min-w-100px">Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    @Html.DisplayFor(modelItem => item.name)
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    @Html.DisplayFor(modelItem => item.category)
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    @Html.DisplayFor(modelItem => item.unit_price)
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    @Html.DisplayFor(modelItem => item.discount_amount)
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    @Html.DisplayFor(modelItem => item.description)
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    @*<a href="@Url.Action("#", "Manager", new {id = item.id})"><i class="fa fa-street-view btn btn-info btn-sm">View</i></a>*@
                                                    <a href="@Url.Action("Service_Edit", "Manager", new {id = item.id})"><i class="fa fa-edit btn btn-info btn-sm">Update</i></a>
                                                    <a onclick="Delete(@item.id)"> <i class="btn btn-danger btn-sm">Delete</i></a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                                <a href="@Url.Action("Service_List", "Manager")" class="btn btn-success btn-sm">Back to list</a>

                                @section Scripts {
                                    <script>
                                        $(function () {
                                            var successMessage = '@TempData["SuccessMessage"]'

                                            if (successMessage != '')
                                                alertify.success(successMessage);
                                        });

                                        function Delete(id) {
                                            alertify.confirm('Booking Data Information', 'Are you sure to delete this record ?', function () {
                                                window.location.href = "https://localhost:44326/Manager/Booking_Delete/" + id;
                                            }, null);
                                        }
                                    </script>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Container-->
            </div>
            <!--end::Post-->
        </div>
    </div>
</div>