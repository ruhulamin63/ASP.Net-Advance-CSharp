@model IEnumerable<BEL.BookingModel>

@{
    ViewBag.Title = "Manage_Booked_Services";
    Layout = "~/Views/Manager/IndexLayout.cshtml";
}

<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
    <!--begin::Container-->
    <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div class="d-flex align-items-center me-3">
            <!--begin::Title-->
            <h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-3">
                Booked Manage Services
                <!--begin::Separator-->
                <span class="h-20px border-gray-200 border-start ms-3 mx-2"></span>
                <!--end::Separator-->
                <!--begin::Description-->
                <small class="text-muted fs-7 fw-bold my-1 ms-1">Booked Confirm</small>
                <!--end::Description-->
            </h1>
            <!--end::Title-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Post-->
<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container">

        <!--begin::Row-->
        <div class="row gy-5 gx-xl-8">
            <!--begin::Col-->
            <div class="col-xl-12">
                <!--begin::Tables Widget 9-->
                <div class="card card-xxl-stretch mb-5 mb-xl-8">
                    <!--begin::Header-->
                    <div class="card-header border-0 pt-5">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label fw-bolder fs-3 mb-1">Booked Manage Information</span>
                            <span class="text-muted mt-1 fw-bold fs-7">All customer comfirmation list</span>
                        </h3>
                    </div>
                    <!--end::Header-->
                    <hr />
                    <!--begin::Body-->
                    <div class="card-body py-3">
                        <!--begin::Table container-->
                        <div class="card-body">
                            <div class="table-responsive">
                                <!--begin::Table head-->
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr style="background-color: #E74C3C; color:white !important">
                                            <th style="text-align: center; width:8%;">Customer Id</th>
                                            <th style="text-align: center;" class="min-w-100px">Total Cost</th>
                                            <th style="text-align: center;" class="min-w-100px">Status</th>
                                            <th style="text-align: center;" class="min-w-100px">Order Date</th>
                                            <th style="text-align: center;" class="min-w-100px">Action</th>
                                        </tr>
                                    </thead>
                                    <!--end::Table head-->
                                    <!--begin::Table body-->
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td style="text-align: center;" class="min-w-100px">
                                                    <span class="text-muted fw-bold text-muted d-block fs-7">
                                                        @Html.DisplayFor(modelItem => item.customer_id)
                                                    </span>
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    <span class="text-muted fw-bold text-muted d-block fs-7">
                                                        @Html.DisplayFor(modelItem => item.total_cost)
                                                    </span>
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    <span class="text-muted fw-bold text-muted d-block fs-7">
                                                        @Html.DisplayFor(modelItem => item.status)
                                                    </span>
                                                </td>
                                                <td style="text-align: center;" class="min-w-100px">
                                                    <span class="text-muted fw-bold text-muted d-block fs-7">
                                                        @Html.DisplayFor(modelItem => item.order_date)
                                                    </span>
                                                </td>

                                                <td class="text-center">
                                                    <a href="@Url.Action("ConfirmBookedService", "Manager", new {id = item.id})" class="btn btn-success"><i class="btn btn-success btn-sm">Confirm</i></a>
                                                    <a onclick="Delete(@item.id)" class="btn btn-danger"><i class="btn btn-danger btn-sm">Cancle</i></a>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    <!--end::Table body-->
                                </table>
                                <!--end::Table-->

                                @section scripts {

                                    <script>
                                    $(function () {
                                        var successMessage = '@TempData["SuccessMessage"]'

                                        if (successMessage != '')
                                            alertify.success(successMessage);
                                    });

                                    function Delete(id) {
                                        alertify.confirm('Booking Confirm Data', 'Are you sure to delete this record ?', function () {
                                            window.location.href = "https://localhost:44326/Manager/Booking_Confirm_Delete/" + id;
                                        }, null);
                                    }
                                    </script>
                                }

                            </div>
                            <!--end::Table container-->
                        </div>
                        <!--begin::Body-->
                    </div>
                    <!--end::Tables Widget 9-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->

        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>