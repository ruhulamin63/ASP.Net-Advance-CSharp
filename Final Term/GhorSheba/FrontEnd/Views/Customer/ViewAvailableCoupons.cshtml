@model IEnumerable<BEL.CouponModel>

@{
    ViewBag.Title = "ViewAvailableCoupons";
    Layout = "~/Views/Shared/HomePageLayout.cshtml";
}

<div class="container">
    <h2>ViewAvailableCoupons</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.min_order_amount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.min_order_amount)
                </td>
                <td>
                    @{ 
                        if(item.status=="Active")
                        {
                            <a href="/Customer/ApplyCoupon/@item.id" class="btn btn-success">Apply</a>
                        }
                    }
                </td>
            </tr>
        }

    </table>
</div>